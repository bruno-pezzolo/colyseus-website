@import "_common"

*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family OptimusPrinceps
  font-size 2.5vh

header
  background url('../images/background.jpg')
  background-position center
  background-size cover
  color #878787
  text-align center
  padding 10vh
  @media only screen and (max-width : 768px)
    img
      width 60%
  @media only screen and (max-width : 480px)
    img
      width 100%
  h2
    margin-top 18px
    color #878787

a
  color #4e5054
  &:hover
    color #3a3c42
    text-decoration none

.center
  text-align center

p
  margin 2vh 0 2vh 0

h1
  font-size 2em

.inner
  margin 0 auto
  width 768px
  @media only screen and (max-width : 992px)
    width 768px
  @media only screen and (max-width : 768px)
    width 480px
  @media only screen and (max-width : 480px)
    width 100%

div.row
  display block
  .column
    vertical-align top
    display inline-block
    width 49%
    @media only screen and (max-width : 768px)
      display block
      width 100%
      img
        width 100%

section
  padding 4vh

  &.headline
    margin 4vh 0
    text-align center
    font-size 1.5em

  .platforms
    text-align center

    h2
      margin-top 4vh
      font-size 1.1em
      text-transform uppercase

    ul
      margin-top 4vh
      li
        list-style none
        display inline-block
        a
          display inline-block
          margin 2vh

          &.unity
            background url('../images/sprites/unity.png') no-repeat top
            display inline-block
            width 60px
            height 62px
            &:hover
              background-position bottom
          &.html5
            background url('../images/sprites/html5.png') no-repeat top
            display inline-block
            width 56px
            height 63px
            &:hover
              background-position bottom
          &.corona
            background url('../images/sprites/corona.png') no-repeat top
            display inline-block
            width 61px
            height 61px
            &:hover
              background-position bottom

  .projects
    display block
    a
      border 4px solid #787879
      padding 0
      display block
      img
        width 100%
        height auto
        display block
        padding 0
        margin 0
      &:hover
        border-color #4e5054

footer
  margin-top 2vh
  background #3d3f45
  color #fff
  padding 4vh
  text-align center
  a
    color inherit
    &:hover
      color inherit
      opacity 0.8
