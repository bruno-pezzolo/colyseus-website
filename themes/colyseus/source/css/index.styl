@import "_common"

*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family OptimusPrinceps
  font-size 18px

header
  background url('../images/background.jpg')
  background-position center
  background-size cover
  color #878787
  text-align center
  padding 88px
  h2
    margin-top 18px
    color #878787

a
  color #4e5054
  &:hover
    color #3a3c42
    text-decoration none

.center
  text-align center

p
  margin 12px 0 22px 0

h1
  font-size 36px

.inner
  margin 0 auto
  width 720px

div.row
  display block
  .column
    vertical-align top
    display inline-block
    width 49%


section
  padding 24px

  &.headline
    margin 44px 0
    text-align center
    font-size 26px
    // line-height 38px

  .platforms
    text-align center

    h2
      margin-top 24px
      font-size 24px
      text-transform uppercase

    ul
      margin-top 32px
      li
        list-style none
        display inline-block
        a
          display inline-block
          margin 14px

          &.unity
            background url('../images/sprites/unity.png') no-repeat top
            display inline-block
            width 60px
            height 62px
            &:hover
              background-position bottom
          &.html5
            background url('../images/sprites/html5.png') no-repeat top
            display inline-block
            width 56px
            height 63px
            &:hover
              background-position bottom
          &.corona
            background url('../images/sprites/corona.png') no-repeat top
            display inline-block
            width 61px
            height 61px
            &:hover
              background-position bottom

  .projects
    display block
    a
      border 4px solid #787879
      padding 0
      display block
      img
        width 100%
        height auto
        display block
        padding 0
        margin 0
      &:hover
        border-color #4e5054

footer
  margin-top 64px
  background #3d3f45
  color #fff
  padding 40px
  text-align center
  a
    color inherit
    &:hover
      color inherit
      opacity 0.8
